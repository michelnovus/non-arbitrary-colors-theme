{
    // === Configuraciones de Visual Studio Code ===
    "telemetry.telemetryLevel": "off",
    "window.restoreWindows": "none",
    "explorer.confirmDragAndDrop": false,
    "breadcrumbs.enabled": false,
    "emmet.triggerExpansionOnTab": true,
    "typescript.suggest.paths": false,
    "javascript.suggest.paths": false,
    "git.openRepositoryInParentFolders": "always",
    "git.confirmSync": false,
    "diffEditor.renderSideBySide": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.venv": true,
        "**/*.egg-info": true,
        "**/.directory": true,
        "**/.vscode": true
    },
    "files.dialog.defaultPath": "/home/michel/dev-src/proyectos",
    "files.associations": {
        "": ""
    },
    // "workbench.colorTheme": "Default Dark Modern",
    "workbench.colorTheme": "Non Arbitrary Colors Theme",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.editor.showTabs": "single",
    "workbench.activityBar.location": "hidden",
    // "workbench.editorAssociations": {
    //     "*.pdf": "latex-workshop-pdf-hook"
    // },
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#e0e0e0",
        "editorBracketHighlight.foreground2": "#ffb835",
        "editorBracketHighlight.foreground3": "#a85116",
        "editorBracketHighlight.foreground4": "#c4421b",
        "editorBracketHighlight.foreground5": "#753333",
        "editorBracketHighlight.foreground6": "#813370"
    },
    "window.menuBarVisibility": "toggle",
    "security.workspace.trust.untrustedFiles": "open",
    // "editor.fontFamily": "'Monaspace Neon', monospace, 'JetBrainsMono Nerd Font', 'RobotoMono Nerd Font', 'AnonymousPro Nerd Font', monospace",
    // "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
    // "editor.fontWeight": "500",
    // "editor.fontSize": 17.5,
    // == != => -> === && :: ...
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    "editor.fontSize": 19,
    "editor.lineHeight": 1.1,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 14,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.smoothScrolling": true,
    "editor.bracketPairColorization.enabled": false,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.guides.highlightActiveBracketPair": false,
    "editor.matchBrackets": "never",
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.size": "proportional",
    "editor.suggest.preview": true,
    // "editor.suggest.selectionMode": "whenTriggerCharacter",
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,
    "editor.guides.indentation": false,
    "editor.glyphMargin": false,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.suggestSelection": "recentlyUsed",
    "editor.hideCursorInOverviewRuler": true,
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.columnSelection": false,
    "editor.renderLineHighlight": "none",
    "editor.tabCompletion": "on",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.codeLens": true,
    "editor.colorDecorators": true,
    "editor.quickSuggestionsDelay": 10,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "editor.rulers": [
        80,
        72
    ],
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 120,
    "editor.semanticHighlighting.enabled": true,
    // === configuraciones generales de Python ===
    "python.defaultInterpreterPath": "/usr/bin/python",
    "python.venvPath": ".venv",
    "python.terminal.executeInFileDir": true,
    "python.languageServer": "Pylance",
    "python.analysis.importFormat": "absolute",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.inlayHints.pytestParameters": true,
    "python.formatting.provider": "none",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "python.analysis.completeFunctionParens": true,
    // "python.linting.pycodestyleEnabled": true,
    // "python.linting.enabled": true,
    // "python.linting.lintOnSave": true,
    // "python.linting.pycodestyleArgs": [
    //     "--ignore=D100,D101,D102,D103,D104,D107,D203,D212,D213,W293,W605,E722,W503",
    // ],
    // === Markdown ===
    // "markdown.preview.fontSize": 16,
    // "markdown.preview.lineHeight": 1.3,
    // === configuracion de Black Foramtter ===
    "black-formatter.args": [
        "--line-length=80",
    ],
    // === configuraciones generales de Rust ===
    "editor.inlayHints.enabled": "on",
    "rust-analyzer.lens.enable": false,
    "rust-analyzer.completion.autoimport.enable": false,
    "rust-analyzer.semanticHighlighting.punctuation.enable": true,
    "rust-analyzer.semanticHighlighting.punctuation.specialization.enable": true,
    "rust-analyzer.semanticHighlighting.punctuation.separate.macro.bang": true,
    "rust-analyzer.semanticHighlighting.operator.specialization.enable": true,
    "[rust]": {
        // "editor.suggest.selectionMode": "whenQuickSuggestion",
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.inlayHints.enabled": "offUnlessPressed",
        "editor.bracketPairColorization.enabled": false,
    },
    // === extensión: Git Graph ===
    "git-graph.repository.commits.showSignatureStatus": true,
    // === extensión: Indenticator ===
    "indenticator.width": 1,
    "indenticator.color.dark": "rgba(255,255,255,0.07)",
    // === extensión: TODO ===
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "# TEST",
            "color": "black",
            "backgroundColor": "#119ca1",
        },
        {
            "text": "# TODO:",
            "color": "black",
            "backgroundColor": "#2fd1dd",
        },
        {
            "text": "# NOTE:",
            "color": "black",
            "backgroundColor": "#ffd382",
        },
        {
            "text": "# FIXME",
            "color": "white",
            "backgroundColor": "#f72f2f",
        },
        {
            "text": "# TEMP",
            "color": "black",
            "backgroundColor": "#ff6600",
        },
        {
            "text": "# DEBUG",
            "color": "white",
            "backgroundColor": "#f72f2f",
        },
        {
            "text": "# CHECKOUT",
            "color": "black",
            "backgroundColor": "#ff6600",
        }
    ],
    // === extensión: Color Highlight ===
    "color-highlight.enable": true,
    "color-highlight.markRuler": false,
    "color-highlight.markerType": "dot-before",
    "color-highlight.languages": [
        "python",
        "bash",
        "sh",
        "xml",
        "html",
        "css",
        "toml",
        "yaml"
    ],
    // === extensión: Latex Workshop ===
    "latex-workshop.view.pdf.invert": 0.9,
    "latex-workshop.latex.outDir": "%DIR%/build/%DOCFILE%",
    "latex-workshop.latex.autoBuild.run": "onFileChange",
    // === extensión: Tabout ===
    "tabout.charactersToTabOutFrom": [
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "'",
            "close": "'"
        },
        {
            "open": "\"",
            "close": "\""
        },
        {
            "open": ":",
            "close": ":"
        },
        {
            "open": "=",
            "close": "="
        },
        {
            "open": ">",
            "close": ">"
        },
        {
            "open": "<",
            "close": "<"
        },
        {
            "open": ".",
            "close": "."
        },
        {
            "open": "`",
            "close": "`"
        },
        {
            "open": ";",
            "close": ";"
        },
        {
            "open": ",",
            "close": ","
        },
    ]
    // === FIN DE ARCHIVO ===
}